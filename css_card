<script>

    function CloseThisDialog() {
        if (typeof (BeforeDialogClose) == 'function') {
            if (BeforeDialogClose() != false) {
                setInterval(function () {
                    window.location.href = '#InAppBrowserClosed';
                }, 300);
                return true;
            }
            $uof.dialog.close();
        }
        else {
            setInterval(function () {
                window.location.href = '#InAppBrowserClosed';
                return true;
            }, 300);
            $uof.dialog.close();
        }
        // args.set_cancel(true);
    }
</script>
